<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/phone_map_warker_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_map_warker_info"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="+8801827955552"
            android:textSize="16sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_worker_image_map"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/profile_worker_account_type"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/designation_ico"
            app:civ_border_color="#DD2324"
            app:civ_border_width="5dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/phone_call_map_warker_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:clickable="true"
            android:padding="5dp"
            app:backgroundTint="#FFF3F3F3"
            app:fabSize="mini"
            app:srcCompat="@drawable/phone_ico"
            android:layout_above="@+id/name_map_warker_info"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/message_map_warker_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/name_map_warker_info"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:clickable="true"
            app:backgroundTint="#FFF3F3F3"
            app:fabSize="mini"
            app:srcCompat="@drawable/message_map" />

        <TextView
            android:id="@+id/name_map_warker_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_worker_image_map"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="Maxwell Clair Corbet"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>